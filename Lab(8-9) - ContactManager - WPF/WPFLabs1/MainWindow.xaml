<Window x:Class="WPFLabs1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLabs1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" MinWidth="500" MinHeight="500">
    <StackPanel>
        <StackPanel Background="Beige">
                <TextBlock Text="Konto Użytkownika" FontSize="30" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <!--upper grid-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock  Text="Login:" FontSize="16" Margin="0 0 10 0 "></TextBlock>
                    <TextBox Name="LoginText" Padding="2" Width="140"></TextBox>
                        <TextBlock   Text="Hasło:" FontSize="16" Margin="10 0 10 0"></TextBlock>
                    <TextBox Name="PasswordText" Padding="2" Width="140"></TextBox>
                    </StackPanel>
                </Grid>
                <Button Click="LoginButton_Click" Name="LoginButton" Content="Zaloguj się" Width="100" Margin="0 10 0 10" Height="30"/>
            </StackPanel>
        <!--lower grid-->
            <Grid Height="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <ListBox x:Name="contactList" Background="BlanchedAlmond" Height="400">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                              
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <DataGrid Grid.Column="1" Height="400" Name="DataContacts">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" />
                    <DataGridTextColumn Header="Surname" />
                    <DataGridTextColumn Header="Email" />
                    <DataGridTextColumn Header="Phone" />
                    <DataGridTextColumn Header="Gender" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</Window>
